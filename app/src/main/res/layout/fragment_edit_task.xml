<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="io.aceisnotmycard.doit.viewmodel.EditTaskViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:id="@+id/edit_task_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:text="@{viewModel.title ?? viewModel.title}" />

        <EditText
            android:id="@+id/edit_task_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Text"
            android:text="@{viewModel.text ?? viewModel.text}" />
    </LinearLayout>
</layout>